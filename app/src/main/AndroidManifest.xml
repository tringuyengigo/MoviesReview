<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gdsvn.tringuyen.moviesreview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.ui.activity.MovieDetailActivity"></activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/google_app_id" />

        <activity android:name=".presentation.ui.activity.splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.activity.login.ForgotPasswordActivity" />
        <activity android:name=".presentation.ui.activity.login.LoginActivity" />
        <activity android:name=".presentation.ui.activity.registration.RegistrationActivity" />
        <activity android:name=".presentation.ui.activity.main.HomeMovieActivity" />
    </application>

</manifest>