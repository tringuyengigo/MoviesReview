<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/classic_darkTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/classic_darkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/classic_darkTheme_colorAccent</item>
        <!--Removing actionbar-->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="PopupOverlay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/classic_darkTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/classic_darkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/classic_darkTheme_colorAccent</item>
    </style>

    <!-- Light theme. -->
    <style name="BaseTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/classic_darkTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/classic_darkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/classic_darkTheme_colorAccent</item>
    </style>


</resources>